---
import BaseLayout from './BaseLayout.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={`Admin - ${title}`}>
    <div class="flex min-h-screen flex-col">
        <header class="border-b bg-card">
            <div class="container flex h-16 items-center justify-between px-4">
                <div class="flex items-center gap-4">
                    <a href="/admin/dashboard" class="text-lg font-bold">Project Showcase Admin</a>
                </div>
                <nav class="flex items-center gap-4">
                    <a href="/admin/dashboard" class="text-sm font-medium hover:underline">Dashboard</a>
                    <a href="/" target="_blank" class="text-sm font-medium hover:underline">View Site</a>
                    <!-- Logout button will be here -->
                </nav>
            </div>
        </header>
        <main class="flex-1 space-y-4 p-8 pt-6">
            <slot />
        </main>
    </div>
</BaseLayout>
